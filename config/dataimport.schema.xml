<?xml version="1.0" encoding="UTF-8"?>
<database name="propel" defaultIdMethod="native" noxsd="true" package="lib.model.dataimport">
	<table name="tb_fileimported" phpName="FileImported">		
		<column name="ca_idfileheader" type="integer" required="true" primaryKey="true"  />			
		<column name="ca_fchimportacion" type="timestamp" required="true" primaryKey="true"/>	
		<column name="ca_content" type="varchar"/>		
		<column name="ca_usuario" type="varchar" required="true" />	
		<column name="ca_procesado" type="boolean" required="true" />
		<column name="ca_nombre" type="varchar" required="true" primaryKey="true" />	
		<foreign-key foreignTable="tb_fileheader">
			<reference local="ca_idfileheader" foreign="ca_idfileheader"/>
		</foreign-key>				
	</table>
	
	<table name="tb_fileheader" phpName="FileHeader">		
		<column name="ca_idfileheader" type="integer" required="true" primaryKey="true" autoIncrement="true" />			
		<column name="ca_descripcion" type="varchar" required="true" />	
		<column name="ca_tipoarchivo" type="varchar" required="true"/>		
		<column name="ca_separador" type="varchar" required="true" />
	    <column name="ca_separadordec" type="varchar" required="true" />
		<column name="ca_fchcreado" type="timestamp" required="true" />
		<column name="ca_usucreado" type="varchar" required="true" />
		<column name="ca_fchactualizado" type="timestamp" required="true" />
		<column name="ca_usuactualizado" type="varchar" required="true" />
	</table>
	
	<table name="tb_filecolumns" phpName="FileColumn">		
		<column name="ca_idfileheader" type="integer" required="true"  />					
		<column name="ca_idcolumna" type="integer" required="true" primaryKey="true" autoIncrement="true" />		
		<column name="ca_columna" type="varchar" required="true" />
		<column name="ca_label" type="varchar" required="true" />	
	    <column name="ca_mascara" type="varchar" required="true" />
		<column name="ca_tipo" type="varchar" required="true" />
		<column name="ca_longitud" type="integer" required="true" />
		<column name="ca_precision" type="integer" required="true" />
		<column name="ca_idregistro" type="integer" required="true" />		
		<column name="ca_fchcreado" type="timestamp" required="true" />
		<column name="ca_usucreado" type="varchar" required="true" />
		<column name="ca_fchactualizado" type="timestamp" required="true" />
		<column name="ca_usuactualizado" type="varchar" required="true" />
		<foreign-key foreignTable="tb_fileheader">
			<reference local="ca_idfileheader" foreign="ca_idfileheader"/>
		</foreign-key>	
	</table>	
	
</database>

 